# Nacos配置示例文件
# 复制此文件为 application.properties 并填入实际配置值

#*************** Spring Boot Related Configurations ***************#
server.servlet.contextPath=/nacos
server.port=8848

#*************** Network Related Configurations ***************#
nacos.inetutils.prefer-hostname-over-ip=false
# nacos.inetutils.ip-address=

#*************** Config Module Related Configurations ***************#
spring.datasource.platform=mysql
db.num=1

# 数据库连接配置
db.url.0=jdbc:mysql://YOUR_NACOS_DB_IP:3306/YOUR_NACOS_DB_NAME?serverTimezone=CTT&characterEncoding=utf8&connectTimeout=1000&socketTimeout=3000&autoReconnect=true
db.user=${DB_USERNAME:root}
db.password=${DB_PASSWORD:}

#*************** Naming Module Related Configurations ***************#
nacos.naming.distro.taskDispatchPeriod=200
nacos.naming.distro.batchSyncKeyCount=1000
nacos.naming.distro.syncRetryDelay=5000
nacos.naming.data.warmup=true
nacos.naming.expireInstance=true
nacos.naming.empty-service.auto-clean=false
nacos.naming.empty-service.clean.initial-delay-ms=60000
nacos.naming.empty-service.clean.period-time-ms=20000

#*************** CMDB Module Related Configurations ***************#
nacos.cmdb.dumpTaskInterval=3600
nacos.cmdb.eventTaskInterval=10
nacos.cmdb.labelTaskInterval=300
nacos.cmdb.loadDataAtStart=false

#*************** Metrics Related Configurations ***************#
management.metrics.export.elastic.enabled=false
management.metrics.export.influx.enabled=false

#*************** Access Log Related Configurations ***************#
server.tomcat.accesslog.enabled=true
server.tomcat.accesslog.pattern=%h %l %u %t "%r" %s %b %D %{User-Agent}i
server.tomcat.basedir=

#*************** Access Control Related Configurations ***************#
nacos.security.ignore.urls=/,/error,/**/*.css,/**/*.js,/**/*.html,/**/*.map,/**/*.svg,/**/*.png,/**/*.ico,/console-fe/public/**,/v1/auth/**,/v1/console/health/**,/actuator/**,/v1/console/server/**
nacos.core.auth.system.type=nacos
nacos.core.auth.enabled=true
nacos.core.auth.default.token.expire.seconds=18000
nacos.core.auth.default.token.secret.key=${NACOS_AUTH_TOKEN_KEY:}
nacos.core.auth.caching.enabled=false

#*************** Istio Related Configurations ***************#
nacos.istio.mcp.server.enabled=false