        <result column="registration_information" jdbcType="VARCHAR" property="registrationInformation"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,create_user,create_time,update_user,update_time,
        name, remarks, group_name, nursing_id, nursing_name, org_id, province, city, hospital_id, department_id, title, mobile, avatar, nick_name, wx_app_id, open_id, im_account, hospital_name, qr_code, business_card_qr_code, deptartment_name, organ_code,class_code, organ_name, birthday, last_login_ip, total_login_times,
         im_group_status, im_msg_status, sex, last_login_time, extra_info, login_name, online, wx_status, im_wx_template_status,
         close_appoint,first_login_time,build_in, independence, has_group, appointment_review,
        latest_access_time, down_load_qr_code, english_business_card_qr_code, english_qr_code,
        password_updated, password, doctor_leader, ai_hosted, login_status, registration_information
    </sql>

    <select id="findPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM u_user_doctor s ${ew.customSqlSegment}
    </select>

    <!-- 通过手机号查询医生信息和医生所在项目 -->
    <select id="findByMobileNoTenant" resultMap="BaseResultMap">
        select ud.id, ud.name, ud.mobile, ud.im_account, open_id, tenant_code, dt.name as tenant_name from u_user_doctor as ud
         left join d_tenant as dt
          on ud.tenant_code = dt.code where ud.mobile like concat(#{mobile}, '%')
    </select>


    <select id="findByIdsNoTenant" parameterType="list" resultMap="BaseResultMap">
        select id, name, mobile, im_account, open_id, tenant_code from u_user_doctor
        where id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="getPatientRecommendDoctor" parameterType="java.util.Map" resultType="com.caring.sass.user.dto.GetPatientRecommendDoctorVo">
        SELECT
        id AS doctorId,
        name AS doctorName
        FROM
        u_user_doctor
        where
        <if test="dto != null and dto.tenantCode != null and dto.tenantCode.trim() != ''">
            tenant_code = #{dto.tenantCode}
        </if>
        <if test="dto != null and dto.doctorName != null and dto.doctorName.trim() != '' ">
            AND name like concat(concat('%', #{dto.doctorName}),'%')
        </if>
        ORDER BY create_time asc
    </select>
</mapper>
