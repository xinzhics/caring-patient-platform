<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caring.sass.user.dao.FollowReplyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.caring.sass.user.entity.FollowReply">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="create_user" jdbcType="BIGINT" property="createUser"/>
        <result column="update_user" jdbcType="BIGINT" property="updateUser"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="reply_switch" jdbcType="VARCHAR" property="functionSwitch"/>
        <result column="reply_category" jdbcType="VARCHAR" property="replyCategory"/>
        <result column="reply_content" jdbcType="VARCHAR" property="replyContent"/>
        <result column="reply_type" jdbcType="VARCHAR" property="replyType"/>
        <result column="reply_form" jdbcType="VARCHAR" property="replyForm"/>
        <result column="reply_time" jdbcType="TIME" property="replyTime"/>
        <result column="triggering_conditions" jdbcType="INTEGER" property="triggeringConditions"/>
        <result column="tenant_code" jdbcType="VARCHAR" property="tenantCode"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,create_time,create_user,update_user,update_time, reply_switch,
         reply_category, reply_content, reply_type, reply_form,
         triggering_conditions, reply_time, tenant_code
    </sql>


    <select id="selectAllTenantCode" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM u_user_follow_reply where reply_category = #{replyCategory} and reply_time = #{replyTime} and reply_switch = #{replySwitch}
    </select>

</mapper>
