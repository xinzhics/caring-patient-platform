<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caring.sass.user.dao.ConsultationGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.caring.sass.user.entity.ConsultationGroup">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="create_user" jdbcType="BIGINT" property="createUser"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_user" jdbcType="BIGINT" property="updateUser"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="nurse_id" jdbcType="BIGINT" property="nurseId"/>
        <result column="doctor_id" jdbcType="BIGINT" property="doctorId"/>
        <result column="im_group_id" jdbcType="VARCHAR" property="imGroupId"/>
        <result column="group_name" jdbcType="VARCHAR" property="groupName"/>
        <result column="member_avatar" jdbcType="VARCHAR" property="memberAvatar"/>
        <result column="group_desc" jdbcType="VARCHAR" property="groupDesc"/>
        <result column="end_time" jdbcType="TIMESTAMP" property="endTime"/>
        <result column="continued" jdbcType="BIGINT" property="continued"/>
        <result column="consultation_status" jdbcType="VARCHAR" property="consultationStatus"/>
        <result column="consultation_entrance" jdbcType="VARCHAR" property="consultationEntrance"/>
        <result column="create_user_type" jdbcType="VARCHAR" property="createUserType"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,create_user,create_time,update_user,update_time,
        nurse_id, doctor_id, im_group_id, group_name, group_desc, end_time,
         continued, consultation_status, member_avatar, consultation_entrance, create_user_type
    </sql>

    <select id="selectByIdNoTenant" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM u_consultation_group WHERE id=#{id}
    </select>

</mapper>
