<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caring.sass.user.dao.MiniappInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.caring.sass.user.entity.MiniappInfo">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="create_user" jdbcType="BIGINT" property="createUser"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_user" jdbcType="BIGINT" property="updateUser"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="user_id" jdbcType="BIGINT" property="userId"/>
        <result column="role_type" jdbcType="VARCHAR" property="roleType"/>
        <result column="mini_app_open_id" jdbcType="VARCHAR" property="miniAppOpenId"/>
        <result column="mini_app_id" jdbcType="VARCHAR" property="miniAppId"/>
        <result column="phone_number" jdbcType="VARCHAR" property="phoneNumber"/>
        <result column="remind_subscription_massage" jdbcType="INTEGER" property="remindSubscriptionMassage"/>
        <result column="session_key" jdbcType="VARCHAR" property="sessionKey"/>
        <result column="tenant_code" jdbcType="VARCHAR" property="tenantCode"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="user_avatar" jdbcType="VARCHAR" property="userAvatar"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,create_user,create_time,update_user,update_time,
        user_id, role_type, mini_app_open_id, mini_app_id, phone_number, remind_subscription_massage, session_key, tenant_code, user_name, user_avatar
    </sql>

    <select id="selectByIdNoTenant" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from u_user_miniapp_info where id = #{id}
    </select>
    
</mapper>
