<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caring.sass.tenant.dao.SequenceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.caring.sass.tenant.entity.Sequence">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="seq_type" jdbcType="VARCHAR" property="seqType"/>
        <result column="current_val" jdbcType="BIGINT" property="currentVal"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,seq_type, current_val
    </sql>

    <select id="selectSequenceVar" resultType="java.lang.Long">
          UPDATE t_sys_sequence SET current_val = LAST_INSERT_ID(current_val + 1) where seq_type = #{seqType,jdbcType=VARCHAR};
        select current_val from t_sys_sequence where seq_type = #{seqType,jdbcType=VARCHAR};
    </select>

</mapper>
